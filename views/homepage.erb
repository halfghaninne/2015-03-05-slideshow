<!DOCTYPE html>
<html>
  <head>
    <script type="text/javascript" src="global.js">
      var user = <%= @user || 'null' %>;
    </script>
    <link rel="stylesheet" href="/style.css" type="text/css"            charset="utf-8">
    <title>Practice Slideshow</title>
  </head>
  <body>
    
    <div>
      <h3>Practice Slideshow</h3>
      <p>The current time is <strong><%= Time.now %></strong>.</p>
    </div>
    
    <% if  @user %>
    
      <div class="user_block">
        <ul class="nav_bar">
          <nav>
          <li>Hey <%= @user.name %>!</li>
          <li><a href="#">My Slides</a></li>
          <li><a href="/logout">Logout</a><li>
          </nav>
        </ul>
        <br>
      </div>
      
    <% else %>
      <div class="anon_nav">
        <ul class="anon_nav">
          <li><a href="/login" class="login_link">Login</a></li>
          <li><a href="/user/new" class="login_link">Register</a></li>
      </div>
      <br>
    <% end %>     
    
    <div class="slidebox">
      <h1 id="title"></h1>
      <p id="body"></p>
    </div>
      
    <div class="slide_nav">
      <a href="#" id="previous" value = "<%= @slide_count %> onclick="getPreviousPage()">Previous</a>
      
      <a href="#" id="next" value ="<%= @slide_count %>" onclick="getNextPage()"> Next </a>
    </div>
    
    
  </body>
</html>